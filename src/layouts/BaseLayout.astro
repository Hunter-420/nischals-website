---
const { pageTitle, description, image } = Astro.props;
const siteTitle = "Nischal Khanal's Webpage";
const siteDescription = "Welcome to Nischal Khanal's personal webpage.";
const base = import.meta.env.BASE_URL;
// ViewTransitions removed due to build incompatibility
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<title>{pageTitle || siteTitle}</title>

		<meta property="og:title" content={pageTitle || siteTitle} />
		<meta property="og:description" content={description || siteDescription} />
		<meta property="og:image" content={image || `${base}img/nis.jpg`} />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content={siteTitle} />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={pageTitle || siteTitle} />
		<meta name="twitter:description" content={description || siteDescription} />
		<meta name="twitter:image" content={image || `${base}img/nis.jpg`} />

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
        <style is:global>
            @import url("https://fonts.googleapis.com/css?family=Lato:400,700|Lora|Playfair+Display:700i,900");

            /* General body styling */
            body {
                background-color: #ecf8f8;
                color: #2d232e;
                font-family: serif;
                margin: 0;
                padding: 20px;
                box-sizing: border-box;
            }

            /* Container for content */
            .container {
                max-width: 64rem;
                margin: 0 auto;
                padding: 2rem;
                border-radius: 1rem;
                min-height: 80vh; 
            }

            /* Header styling */
            h1 {
                color: rgba(0, 0, 0, 0.84);
                font-size: 3rem;
                margin-bottom: 0.5rem;
                text-align: center;
                font-family: "Playfair Display", serif;
            }

            /* Section header styling */
            h2, h3 {
                color: rgba(0, 0, 0, 0.84);
                margin-bottom: 0.5rem;
                margin-top: 2rem;
                text-align: left;
                font-size: 2.2rem;
                font-family: "Lato", sans-serif;
                letter-spacing: -0.45px;
                font-weight: 700;
                line-height: 2.15625rem;
            }

            p {
                font-family: "Lora";
                margin-top: 1.3125rem;
                font-size: 1.5rem;
                letter-spacing: -0.03px;
                line-height: 1.58;
            }

            /* Profile image styling */
            .profile-img {
                display: block;
                margin-block-start: 1em;
                margin-block-end: 1em;
                margin-left: auto;
                margin-right: auto;
                unicode-bidi: isolate;
                width: 40%; /* Matches original style */
                align-items: center;
                border-radius: 10%; /* Matches original style */
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

            /* Icon bar styling */
            .icon-bar {
                margin: 20px 0;
                text-align: center;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 1.5rem;
                flex-wrap: wrap; 
            }

            .icon-bar img {
                width: 50px;
                height: 50px;
                transition: transform 0.2s ease;
            }

            .icon-bar img:hover {
                transform: scale(1.1);
            }

            /* Search Icon Styling */
            .search-icon {
                font-size: 2rem;
                color: #15616d;
                cursor: pointer;
                transition: color 0.2s;
            }
            .search-icon:hover {
                color: #20a4f3;
            }

            /* Section styling */
            .section {
                text-align: left;
                margin-bottom: 3rem;
            }

            /* Unordered list and list item styling */
            ul {
                display: block;
                list-style-type: disc;
                margin-block-start: 1em;
                margin-block-end: 1em;
                margin-inline-start: 0px;
                margin-inline-end: 0px;
                padding-inline-start: 40px;
                unicode-bidi: isolate;
            }

            li {
                margin: 10px 0;
                font-size: 1.5rem;
                position: relative;
                padding-bottom: 0.5em;
                font-family: "Lora";
            }

            li:hover {
                color: #20a4f3;
            }

            .webtitle {
                color: #15616d;
                font-size: 1.5rem;
                font-weight: bold;
            }

            .weblink {
                color: #43aa8b;
                font-size: 1.2rem;
                margin-left: 0.5rem;
            }

            /* Link styling inside the list items */
            li a {
                color: #144552;
                text-decoration: none;
                cursor: pointer;
                transition: color 0.2s;
            }

            li a:hover {
                color: #20a4f3;
            }

            hr {
                border: 0;
                height: 1px;
                background-color: #444;
                margin: 20px 0;
            }

            ul li::marker {
                unicode-bidi: isolate;
                font-variant-numeric: tabular-nums;
                text-transform: none;
                text-indent: 0px !important;
                text-align: start !important;
                text-align-last: start !important;
                color: #a1c181;
            }

            time {
                color: gray;
            }

            /* Code Blocks (Preserving the new dark theme as it's better) */
            pre {
                color: #e6edf3;
                background-color: #1a1e23;
                padding: 1.5rem;
                font-size: 1rem;
                border-radius: 8px;
                overflow-x: auto;
                font-family: 'Fira Code', monospace;
                margin: 2rem 0;
                box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            }

            code {
                font-family: 'Fira Code', monospace;
                background-color: rgba(0,0,0,0.05); /* Inline code bg */
                padding: 0.2rem 0.4rem;
                border-radius: 4px;
                font-size: 0.9em;
            }

            pre code {
                background-color: transparent;
                padding: 0;
            }

            /* Button Reset for Projects (User disliked the shiny buttons) */
            .project-link {
                color: #144552;
                text-decoration: underline;
                font-weight: bold;
                margin-right: 1rem;
            }

            /* Media Queries */
            @media (max-width: 768px) {
                .container {
                    padding: 1rem;
                    margin: auto;
                }

                .profile-img {
                    width: 40%;
                }
            }

            @media (max-width: 480px) {
                h1 {
                    font-size: 2rem;
                }

                h2, h3 {
                    font-size: 1.6rem;
                }

                p, li, .webtitle {
                    font-size: 1.3rem;
                }

                li a {
                    font-size: 1.3rem;
                }

                .container {
                    padding: 1rem; /* Optimal margin for mobile */
                }

                .profile-img {
                    width: 60%;
                }
                
                .icon-bar img {
                    width: 30px;
                    height: 30px;
                }
            }
        </style>
	</head>
	<body>
        <!-- Semantic Header for Navigation -->
        <header class="site-header">
            <nav class="container nav-container">
                <div class="left-nav">
                    <button onclick="history.back()" class="back-btn" aria-label="Go Back"><i class="fas fa-arrow-left"></i> Back</button>
                    <a href={base} class="home-link"><i class="fas fa-home"></i> Home</a>
                </div>
                <button id="search-trigger-btn" aria-label="Search" class="search-btn"><i class="fas fa-search"></i> ( / )</button>
            </nav>
        </header>

		<slot />

        <!-- Search Modal -->
        <div id="search-modal" class="search-modal hidden">
            <div class="search-content">
                <input type="text" id="global-search-input" placeholder="Search anything... (Press Esc to close)" />
                <ul id="search-results"></ul>
                <div class="search-footer">
                    <button id="close-search">Close</button>
                </div>
            </div>
        </div>

        <script define:vars={{base}}>
            // Global Search & Shortcut Logic
            const modal = document.getElementById('search-modal');
            const input = document.getElementById('global-search-input');
            const closeBtn = document.getElementById('close-search');
            const triggerBtn = document.getElementById('search-trigger-btn');
            const resultsList = document.getElementById('search-results');

            let searchData = null;

            async function fetchSearchData() {
                if (!searchData) {
                    try {
                        const res = await fetch(`${base}search.json`);
                        searchData = await res.json();
                    } catch (e) {
                        console.error("Failed to load search index", e);
                    }
                }
            }

            function openSearch() {
                modal.classList.remove('hidden');
                input.focus();
                fetchSearchData();
            }

            function closeSearch() {
                modal.classList.add('hidden');
                input.value = '';
                resultsList.innerHTML = '';
            }

            // Keyboard Shortcut '/'
            document.addEventListener('keydown', (e) => {
                if (e.key === '/' && !modal.classList.contains('hidden')) {
                    // prevent typing '/' if modal is open to avoid double input
                    // e.preventDefault(); 
                } else if (e.key === '/' && document.activeElement.tagName !== 'INPUT' && document.activeElement.tagName !== 'TEXTAREA') {
                    e.preventDefault();
                    openSearch();
                } else if (e.key === 'Escape') {
                    closeSearch();
                }
            });

            triggerBtn?.addEventListener('click', openSearch);
            closeBtn?.addEventListener('click', closeSearch);
            modal?.addEventListener('click', (e) => {
                if (e.target === modal) closeSearch();
            });

            // Search Logic
            input?.addEventListener('input', (e) => {
                const query = e.target.value.toLowerCase();
                resultsList.innerHTML = '';
                if (query.length < 2 || !searchData) return;

                const results = searchData.filter(item => 
                    item.title.toLowerCase().includes(query) || 
                    (item.description && item.description.toLowerCase().includes(query)) ||
                    (item.tags && item.tags.some(tag => tag.toLowerCase().includes(query)))
                ).slice(0, 5); // Limit to 5 results

                results.forEach(item => {
                    const li = document.createElement('li');
                    const a = document.createElement('a');
                    a.href = `${base}${item.slug}`;
                    a.innerHTML = `<span style="font-size:0.8em; color:gray; margin-right:5px;">[${item.type}]</span> ${item.title}`;
                    li.appendChild(a);
                    resultsList.appendChild(li);
                });
            });
        </script>

        <style>
            /* Navigation Header */
            .site-header {
                padding: 1rem 0;
            }
            .nav-container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                min-height: auto !important; /* Override global container min-height */
                padding: 0 1rem;
            }
            .home-link, .search-btn, .back-btn {
                background: none;
                border: none;
                font-family: 'Lato', sans-serif;
                font-size: 1.2rem;
                color: #15616d;
                text-decoration: none;
                cursor: pointer;
                transition: color 0.2s;
                margin-right: 1rem;
            }
            .home-link:hover, .search-btn:hover, .back-btn:hover {
                color: #20a4f3;
            }
            .left-nav {
                display: flex;
                align-items: center;
            }

            /* Search Modal Styling */
            .search-modal {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.5);
                display: flex;
                justify-content: center;
                align-items: flex-start;
                padding-top: 10%;
                z-index: 1000;
                backdrop-filter: blur(2px);
            }
            .hidden {
                display: none;
            }
            .search-content {
                background: white;
                padding: 2rem;
                border-radius: 8px;
                width: 90%;
                max-width: 600px;
                box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            }
            #global-search-input {
                width: 100%;
                padding: 1rem;
                font-size: 1.2rem;
                border: 2px solid #ddd;
                border-radius: 4px;
                outline: none;
            }
            #global-search-input:focus {
                border-color: #15616d;
            }
            #search-results {
                list-style: none;
                padding: 0;
                margin-top: 1rem;
            }
            #search-results li {
                margin: 0.5rem 0;
                border-bottom: 1px solid #eee;
                padding-bottom: 0.5rem;
            }
            #search-results a {
                text-decoration: none;
                color: #2d232e;
                font-weight: bold;
                display: block;
            }
            #search-results a:hover {
                color: #20a4f3;
            }
            .search-footer {
                margin-top: 1rem;
                text-align: right;
            }
            #close-search {
                padding: 0.5rem 1rem;
                background: #ddd;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }
        </style>
	</body>
</html>
